<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/black_op_90"
    >
<RelativeLayout
    android:id="@+id/popup_sign_up_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_signup_popup"
        android:alpha="0.6"
        >
    </View>
    <View
        android:layout_width="200dp"
        android:layout_height="229.4dp"
        android:layout_centerInParent="true"
        android:background="@drawable/logo"
        android:alpha="0.1"
        />
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <Button
        android:id="@+id/btn_close_signup_pop"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tx_signup_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/title_signup_popup"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/et_name_sign_up_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_signup_popup_title"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/shape_edite_text"
            android:drawableLeft="@drawable/ic_name_ed_text"
            android:drawableStart="@drawable/ic_name_ed_text"
            android:hint="@string/hint_name_et_sign_up_popup"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/et_mobile_num_sign_up_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@id/et_name_sign_up_popup"
        android:background="@drawable/shape_edite_text"
        android:drawableStart="@drawable/ic_mobile_num_et"
        android:drawableLeft="@drawable/ic_mobile_num_et"
        android:hint="@string/hint_mob_et_sign_up_popup"
        android:textColor="@color/white"
        android:maxLength="11"
        android:singleLine="true"
        android:textColorHint="@color/white"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:inputType="phone"
        />
    <LinearLayout
        android:id="@+id/layout_ge_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_mobile_num_sign_up_popup"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        >
        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_mobile_num_sign_up_popup"
            android:background="@drawable/shape_spinner"
            android:entries="@array/gender_array"
            android:spinnerMode="dialog"
            android:layout_marginEnd="16dp"
            android:popupBackground="@color/black_op_90"
            />
        <TextView
            android:id="@+id/tx_birthday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:drawableStart="@drawable/ic_date_of_birth"
            android:drawableLeft="@drawable/ic_date_of_birth"
            android:background="@drawable/shape_edite_text"
            android:textColor="@color/white"

            android:text="@string/hint_birth_date_et_sign_up_popup"
            android:gravity="center_vertical"
            />
    </LinearLayout>



    <EditText
        android:id="@+id/et_address_sign_up_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@id/layout_ge_date"
        android:background="@drawable/shape_edite_text"
        android:drawableStart="@drawable/ic_address"
        android:drawableLeft="@drawable/ic_address"
        android:hint="@string/hint_address_et_sign_up_popup"
        android:textColor="@color/white"
        android:singleLine="true"
        android:textColorHint="@color/white"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        />

    <EditText
        android:id="@+id/et_password_sign_up_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@id/et_address_sign_up_popup"
        android:background="@drawable/shape_edite_text"
        android:drawableStart="@drawable/ic_password_et"
        android:drawableLeft="@drawable/ic_password_et"
        android:hint="@string/hint_password_et_sign_up_popup"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:inputType="textPassword"
        android:singleLine="true"
        />
    <Button
        android:id="@+id/btn_confirm_sign_up_popup"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_password_sign_up_popup"
        android:background="@drawable/shape_btn_confirm"
        android:text="@string/btn_confirm_sign_up_popup"
        android:textColor="@color/black_op_90"
        />

    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>
</ScrollView>